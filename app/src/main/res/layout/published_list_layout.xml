<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shadow_red">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/published_list_layout_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/blu"/>

    <!--<ImageView-->
        <!--android:id="@+id/published_list_layout_dots"-->
        <!--android:padding="5dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/three_dot_24dp"-->
        <!--android:layout_alignParentEnd="true"/>-->

    <ImageView
        android:id="@+id/published_list_layout_likes"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/like_24dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/published_list_layout_name"
        android:layout_toRightOf="@id/published_list_layout_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/blu"
        android:text="Zack David"/>
    <TextView
        android:id="@+id/published_list_layout_location"
        android:layout_below="@+id/published_list_layout_name"
        android:layout_toRightOf="@+id/published_list_layout_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/red"
        android:text="location"/>

    <TextView
        android:id="@+id/published_list_layout_note"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/published_list_layout_img"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@drawable/shadow_red"
        android:textColorHint="@color/dark"
        android:hint="note"
        android:textColor="@color/blu"
        android:textSize="18dp" />

</RelativeLayout>